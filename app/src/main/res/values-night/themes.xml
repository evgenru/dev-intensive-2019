<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_night</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_night</item>
        <item name="colorAccent">@color/color_accent_night</item>

        <item name="colorAccentedSurface">@color/color_primary_light_night</item>
        <item name="colorIcon">@color/color_gray</item>
        <item name="colorDivider">@color/color_divider_light</item>



        <item name="colorItem">@color/color_primary_light_night</item>
        <item name="colorPrimaryText">@android:color/white</item>
        <item name="colorSecondaryText">@color/color_gray</item>
        <item name="colorCounter">@color/color_gray_dark</item>
        <item name="colorIndicator">@color/color_accent_night</item>
        <item name="colorArchiveIcon">@color/color_gray_dark</item>
        <item name="colorItemSwipeBackground">@color/color_primary_light_night</item>
        <item name="colorItemSwipeUnderground">@color/color_accent_night</item>




        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>
    </style>

</resources>
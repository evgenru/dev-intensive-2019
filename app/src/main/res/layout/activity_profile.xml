<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.profile.ProfileActivity">
        <ImageView
                android:src="@drawable/profile_bg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="16:9" android:cropToPadding="false"
                android:scaleType="centerCrop"/>

        <ru.skillbranch.devintensive.ui.custom.CircleImageView
                android:layout_width="@dimen/avatar_round_size"
                android:layout_height="@dimen/avatar_round_size"
                android:src="@drawable/avatar_default"
                android:id="@+id/iv_avatar"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="@+id/imageView" app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/tv_nick_name"/>
        <ImageButton
                android:id="@+id/btn_switch_theme"
                android:src="@drawable/ic_switch_day_night"
                android:layout_width="@dimen/btn_round_size_40"
                android:layout_height="@dimen/btn_round_size_40"
                android:background="@drawable/btn_round_bg" app:layout_constraintEnd_toStartOf="@+id/iv_avatar"
                app:layout_constraintTop_toTopOf="@+id/iv_avatar"
                app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
                android:layout_marginEnd="@dimen/spacing_huge_32"/>
        <ImageButton
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_width="@dimen/btn_round_size_40"
                android:layout_height="@dimen/btn_round_size_40"
                android:id="@+id/btn_edit"
                android:background="@drawable/btn_round_bg"
                app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                app:layout_constraintTop_toTopOf="@+id/iv_avatar"
                app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
                android:layout_marginStart="@dimen/spacing_huge_32"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nick_name" style="@style/Profile.Header.Nickname"
                app:layout_constraintTop_toBottomOf="@+id/iv_avatar" app:layout_constraintEnd_toEndOf="@+id/iv_avatar"
                app:layout_constraintStart_toStartOf="@+id/iv_avatar"
                android:layout_marginTop="@dimen/spacing_normal_16"
                tools:text="John Doe" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/tv_rank"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rank" style="@style/Profile.Header.Rank"
                app:layout_constraintTop_toBottomOf="@+id/tv_nick_name"
                app:layout_constraintEnd_toEndOf="@+id/tv_nick_name"
                app:layout_constraintStart_toStartOf="@+id/tv_nick_name" tools:text="Junior Android Developer"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/imageView"
                android:layout_marginBottom="16dp"/>
        <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="?attr/colorAccentedSurface"/>
        <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:id="@+id/view2"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="@+id/view"
                android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
                android:background="@color/color_divider_light"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rating" style="@style/Profile.Metrics.Value"
                app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintTop_toTopOf="@+id/view"
                app:layout_constraintVertical_chainStyle="packed" app:layout_constraintEnd_toStartOf="@+id/view2"
                app:layout_constraintStart_toStartOf="parent" android:drawableLeft="@drawable/ic_sp_24"/>
        <TextView
                android:text="@string/profile_label_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" style="@style/Profile.Metrics.Label"
                app:layout_constraintTop_toBottomOf="@+id/tv_rating" app:layout_constraintEnd_toEndOf="@+id/tv_rating"
                app:layout_constraintStart_toStartOf="@+id/tv_rating" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toBottomOf="@+id/view"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_respect" style="@style/Profile.Metrics.Value"
                app:layout_constraintBottom_toTopOf="@+id/textView6" app:layout_constraintTop_toTopOf="@+id/view"
                app:layout_constraintVertical_chainStyle="packed" app:layout_constraintStart_toEndOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="@+id/view" android:drawableLeft="@drawable/ic_respect_24"/>
        <TextView
                android:text="@string/profile_label_respect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" style="@style/Profile.Metrics.Label"
                app:layout_constraintTop_toBottomOf="@+id/tv_respect" app:layout_constraintEnd_toEndOf="@+id/tv_respect"
                app:layout_constraintStart_toStartOf="@+id/tv_respect"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintHorizontal_bias="0.5"/>
        <ImageView
                android:layout_width="@dimen/btn_round_size_40"
                android:layout_height="@dimen/btn_round_size_40"
                app:srcCompat="@drawable/ic_avatar"
                android:id="@+id/imageView3" android:layout_marginTop="@dimen/spacing_normal_16"
                app:layout_constraintTop_toBottomOf="@+id/view" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/spacing_normal_16"/>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                android:layout_marginStart="@dimen/spacing_normal_16"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/spacing_normal_16"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                android:id="@+id/textInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_hint_first_name" style="@style/Profile.EditText.Single"
                    tools:text="John" android:id="@+id/et_first_name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout" android:id="@+id/textInputLayout2">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_hint_last_name" style="@style/Profile.EditText.Single"
                    tools:text="Doe"
                    android:id="@+id/et_last_name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:id="@+id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout2"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
                android:background="?attr/colorDivider"
                android:layout_marginTop="5dp"/>
        <ImageView
                android:layout_width="@dimen/btn_round_size_40"
                android:layout_height="@dimen/btn_round_size_40"
                app:srcCompat="@drawable/ic_about"
                android:id="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"/>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wr_about"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout2"
                app:layout_constraintEnd_toEndOf="@+id/textInputLayout2"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:counterMaxLength="128"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_hint_about"
                    style="@style/Profile.EditText.MultiLine"
                    tools:text="Something"
            />
        </com.google.android.material.textfield.TextInputLayout>
        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:id="@+id/divider2" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/wr_about"
                app:layout_constraintTop_toBottomOf="@+id/wr_about"
                android:background="?attr/colorDivider"
                android:layout_marginTop="5dp"/>
        <ImageView
                android:layout_width="@dimen/btn_round_size_40"
                android:layout_height="@dimen/btn_round_size_40"
                app:srcCompat="@drawable/ic_repo"
                android:id="@+id/imageView6" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/divider2"
                android:layout_marginTop="16dp"/>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imageView6" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/imageView6" android:id="@+id/wr_repository"
                app:layout_constraintEnd_toStartOf="@+id/btn_eye" android:layout_marginEnd="16dp"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_hint_repository"
                    tools:text="http://github.com"
                    android:inputType="textUri"
                    android:imeOptions="actionDone"
                    android:id="@+id/et_repository"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_eye_24dp"
                android:id="@+id/btn_eye"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/wr_repository"
                app:layout_constraintBottom_toBottomOf="@+id/wr_repository"
                app:layout_constraintStart_toEndOf="@+id/wr_repository"
                android:visibility="visible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>